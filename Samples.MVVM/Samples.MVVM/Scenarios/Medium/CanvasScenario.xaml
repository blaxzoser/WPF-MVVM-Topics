<Window x:Class="Samples.MVVM.Scenarios.Medium.CanvasScenario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.MVVM.Scenarios.Medium"
        mc:Ignorable="d"
        Title="CanvasScenario" Height="450" Width="800">
    <Canvas>
        <Button Content="Sample" Canvas.Top="55" Canvas.Left="120" Background="Pink"></Button>
        <Button Content="Sample 1.1" Canvas.Top="60" Canvas.Left="130" Background="AliceBlue"></Button>
        <Button Content="Sample 2" Canvas.Top="100" Canvas.Left="99" Width="500" >
            <Button.RenderTransform>
                <RotateTransform Angle="10"></RotateTransform>
            </Button.RenderTransform>
        </Button>
        <Button Content="Sample 3" Background="Blue" Canvas.Top="300" Canvas.Left="300"></Button>
        <Rectangle Fill="Red" Width="100" Height="200" Canvas.Top="200" Canvas.Left="300" Panel.ZIndex="-1"  >
        </Rectangle>
</Canvas>
</Window>
