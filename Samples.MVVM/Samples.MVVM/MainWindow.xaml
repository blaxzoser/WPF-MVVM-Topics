<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.MVVM"
        xmlns:View="clr-namespace:Samples.MVVM.View" x:Class="Samples.MVVM.MainWindow"
        mc:Ignorable="d"
        Title="WPF Scenarios" Height="150" Width="500">
    <Grid>
        <StackPanel Margin="10">
              <ComboBox x:Name="cbOptions" Width="300" Height="50"   >
                  <ComboBoxItem>Controls</ComboBoxItem>
                  <ComboBoxItem>Template</ComboBoxItem>
                  <ComboBoxItem>Style</ComboBoxItem>
                  <ComboBoxItem>Theming</ComboBoxItem>
                  <ComboBoxItem>Events</ComboBoxItem>
                  <ComboBoxItem>Binding</ComboBoxItem>
                <ComboBoxItem>BadScenario</ComboBoxItem>
            </ComboBox>
              <Button Width="300" Height="50" Content="Open" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
